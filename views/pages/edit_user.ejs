<!DOCTYPE html>
<html lang="es">
<head>
	<title>Editar Usuario</title>
	<%- include('../partials/head') %>
	<link rel="stylesheet" href="/css/login.css" media="all">
</head>
<body>
	<div class="container d-flex flex-column justify-content-between">
	
		<header>
			    <%- include('../partials/header'); %>
		</header>

		<main class="content text-center text-left">

			<h2 class="my-4">Editar Usuario</h2>

			<%- include('../partials/alerts') %>

			<form method="POST" action="/member/edit_user" class="col-8 m-auto">
				<div class="form-group">
					<label for="name_input">Nombre</label>
					<input value="<%= data.first_name %>" type="text" name="name" class="form-control" id="name_input" aria-describedby="emailHelp" placeholder="Nombre">
				</div>

				<div class="form-group my-5">
					<label for="lastname_input">Apellido</label>
					<input value="<%= data.last_name %>" type="text"  name="lastname" class="form-control" id="lastname_input" placeholder="Apellido">
				</div>

				<div class="form-group my-5">
					<label for="username_input">Usuario</label>
					<input value="<%= data.username %>" type="text" name="username" class="form-control" id="username_input"  placeholder="Username">
				</div>

				<div class="form-group my-5">
					<label for="email_input">Email</label>
					<input value="<%= data.email %>" type="text" name="email" class="form-control" id="email_input"  placeholder="Email">
				</div>

				<!--
				<div class="form-group my-5">
					<label for="password_input">contraseña</label>
					<input type="password" name="password" class="form-control" id="password_input" placeholder="Contraseña">
				</div>
				-->

				<div class="form-group my-5">

					<label for="role_input">Role</label>
					<select name="role" id="role_input" class="form-control form-control-sm">
						  <option value="username">Usuario</option>
						  <option value="admin">Administrador</option>
					</select>

				</div>

				<input type="hidden" name="id" value="<%= data.id %>">

				<button type="submit" class="btn btn-primary my-5">Guardar</button>

			</form>

		</main>

		<footer>
			    <%- include('../partials/footer'); %>
		</footer>
	</div>

</body>
</html>

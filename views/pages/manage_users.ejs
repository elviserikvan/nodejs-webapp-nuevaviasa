<!doctype html>
<html lang="es">
<head>
	<title>Gestion de usuarios</title>
	<%- include('../partials/head') %>
	<!-- <link rel="stylesheet" href="/css/dashboard.css" media="all"> -->
	<style>
		html, body, .container {
			height: 100%;
		}
	</style>
</head>
<body>

	<div class="container d-flex flex-column justify-content-between">
	
		<header>
			    <%- include('../partials/header'); %>
		</header>

		<main class="content text-center text-left">

			<%- include('../partials/alerts') %>

			<div class="top_table d-flex justify-content-between align-items-center mt-5 mb-3">

				<!--
				<div class="btn-group">
					<button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						opciones
					</button>
					<div class="dropdown-menu">
						<a class="dropdown-item" href="/member/add">añadir nuevo</a>
						<a class="dropdown-item" href="/member/exportpdf">exportar a pdf</a>
					</div>
				</div>
				-->

				<a class="btn btn-warning" href="/member/add_user">Añadir usuario</a>
			</div>

			<table class="table text-left">
				<thead>
					<tr>
						<!-- <th scope="col">#</th> -->
						<th scope="col">Nombre</th>
						<th scope="col">Apellido</th>
						<th scope="col">Usuario</th>
						<th scope="col">Email</th>
						<th scope="col">Fecha de creacion</th>
						<th scope="col">Role</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody id="backups_table">
					<% users.forEach(user => {  %>

						<tr>
							<td><%= user.first_name %></td>
							<td><%= user.last_name %></td>
							<td><%= user.username %></td>
							<td><%= user.email %></td>
							<td><%= user.registered_at %></td>
							<td><%= user.role %></td>
							<td>
								<div class="dropdown">
									<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownmenubutton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										...
									</button>
									<div class="dropdown-menu" aria-labelledby="dropdownmenubutton">
										<a class="dropdown-item" href="/member/change_user_password/<%= user.id %>">Cambiar contraseña</a>
										<a class="dropdown-item" href="/member/edit_user/<%= user.id %>">Modificar</a>
									</div>
								</div>
							</td>
						</tr>

					<% }) %>
				</tbody>
			</table>

		</main>

		<footer>
			    <%- include('../partials/footer'); %>
		</footer>
	</div>

	<script src="/js/database.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="es">
<head>
	<title>Iniciar Sesion</title>
	<%- include('../partials/head') %>
	<link rel="stylesheet" href="/css/login.css" media="all">
</head>
<body>
	<% if(messages.error) {%>
		<%= messages.error %>
	<% } %>

	<div class="container d-flex flex-column justify-content-between">
	
		<header>
			    <%- include('../partials/header'); %>
		</header>

		<main class="content text-center text-left">
				<form class="col-8 m-auto" method="POST" action="/login">
					<div class="form-wrap">
						<div class="form-group">
							<label for="exampleInputEmail1">Email</label>
							<input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder=" email">
							<!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
						</div>
						<div class="form-group my-5">
							<label for="exampleInputPassword1">Contraseña</label>
							<input type="text" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
						</div>

						<div class="form-group">
							<button type="submit" class="btn btn-primary">Iniciar sesion</button>
						</div>

						<a class="recuperar-contraseña-btn" href="#">Recuperar contraseña</a>
					</div>
				</form>

		</main>

		<footer>
			    <%- include('../partials/footer'); %>
		</footer>
	</div>

</body>
</html>
